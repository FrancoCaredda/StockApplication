<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
          xmlns:mc="sap.suite.ui.microchart"
          controllerName="stock.application.controller.Statistics">
    <Table headerText="{i18n>statTableCaption}" class="sapUiResponsiveMargin" width="auto" items="{
            path: 'products>/Types',
            sorter: {
                path: 'products>Percent'
            }
        }">
        <columns>
            <Column hAlign="Center">
                <Label text="{i18n>tableTypeColumn}" textAlign="Center"/>
            </Column>
            <Column hAlign="Center">
                <Label text="{i18n>salaryElement}" textAlign="Center"/>
            </Column>
            <Column hAlign="Center" sortIndicator="Ascending">
                <Label text="{i18n>percentElement}" textAlign="Center"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem id="stat-row">
                <cells>
                    <Label vAlign="Middle" textAlign="Center" text="{products>TypeName}"/>
                    <ObjectNumber textAlign="Center" number="{
                        parts: [
                            {path: 'products>Salary'},
                            {path: 'view>/currency'}
                        ],
                        type: 'sap.ui.model.type.Currency'
                    }"/>
                    <mc:RadialMicroChart width="100%" alignContent="Center" size="S" class="little-margin-left" percentage="{products>Percent}" valueColor="{=(${view>/criticalValue} > ${products>Percent}) ? 'Error' : 'Good'}" press="press"></mc:RadialMicroChart>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>