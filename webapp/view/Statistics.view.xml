<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
          controllerName="stock.application.controller.Statistics">
    <Table headerText="{i18n>statTableCaption}" id="stats" width="auto" class="sapUiResponsiveMargin" items="{
        path: 'products>/Types',
        factory: '.constructTable',
        sorter: {
            path: 'products>Percent'
        }
    }">
        <columns>
            <Column hAlign="Center">
                <Label textAlign="Center" text="Tipo"/>
            </Column>
            <Column hAlign="Center">
                <Label textAlign="Center" text="Denaro"/>
            </Column>
            <Column hAlign="Center" sortIndicator="Ascending">
                <Label textAlign="Center" text="Percento"/>
            </Column>
        </columns>
        <dependents>
            <core:Fragment fragmentName="stock.application.view.fragments.StatTableItem" />
        </dependents>
    </Table> 
</mvc:View>