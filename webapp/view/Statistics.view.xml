<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
          xmlns:mc="sap.suite.ui.microchart"
          controllerName="stock.application.controller.Statistics">
    <SplitContainer backgroundColor="Transparent">
        <masterPages>
             <List width="100%">
                <ObjectListItem id="type-label" title="{i18n>typeElement}"/>
                <ObjectListItem id="salary-label" title="{i18n>salaryElement}"/>
                <ObjectListItem id="total-salary-label" title="{i18n>totalSalaryElement}"/>
                <ObjectListItem id="percent-label" title="{i18n>percentElement}"/>
            </List>
        </masterPages>
        <detailPages>
            <VBox class="custom-container">
                <Title text="{i18n>selectElementLabel}"/>
                <Select width="100%" items="{products>/Types}" change=".selectTypeChanged">
                    <items>
                        <core:ListItem text="{products>TypeName}"></core:ListItem>
                    </items>
                </Select>
            </VBox>
        </detailPages>
    </SplitContainer>
</mvc:View>